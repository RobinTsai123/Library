<% if (user.role == 'admin') { %>
    <%- include('admin/layout', { title: 'My Following', body: `` }) %>
<% } else { %>
    <%- include('layout', { title: 'My Following', body: `` }) %>
<% } %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Users I'm Following</h4>
                </div>
                <div class="card-body">
                    <% if (following.length > 0) { %>
                        <ul class="list-group">
                            <% following.forEach(user => { %>
                                <li class="list-group-item">
                                    <a href="/user_profile/<%= user.UserID %>" class="text-decoration-none text-dark">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h5 class="mb-0"><%= user.username %></h5>
                                                <p class="mb-0 text-muted"><%= user.email %></p>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p class="text-muted">You are not following anyone yet.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
