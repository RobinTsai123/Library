<!-- views/layout.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <!-- Your custom styles -->
</head>
<body>
    <div class="container">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <% if (!loggedIn) { %>
                    <a class="navbar-brand" href="/">Slayton’s Skincare</a>
                <% } %>
                <% if (loggedIn) { %>
                <a class="navbar-brand">Slayton’s Skincare</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="/product_list">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Best Sellers</a>
                            </li>
                    </ul>
                    <ul class="navbar-nav justify-content-end">
                            <li class="nav-item">
                                <a class="nav-link" href="/profile">Welcome, <%= user.username %>!</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout" onclick="return confirm('Confirm Log Out?');">Log Out</a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        <main class="mt-4">
            <!-- Content from child pages will go here -->
            <%= body %>
        </main>

        <!-- Bootstrap JS bundle -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Your custom scripts -->
        <script src=""></script>
    </div>
</body>
</html>
